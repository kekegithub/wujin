<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_home_sale_shop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/home_sale_shop"/>
        <TextView
            android:id="@+id/home_sale_shopname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="箭牌实木浴。。。。。"
            android:maxEms="6"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_below="@+id/iv_home_sale_shop"
            android:gravity="center"/>
        <TextView
            android:id="@+id/home_sale_shop_discount_price"
            android:layout_below="@+id/home_sale_shopname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="8729.0元"
            android:textColor="#ff7300"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/home_sale_shop_original_price"
            android:layout_below="@+id/home_sale_shop_discount_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="12620.0元"
            android:textColor="#999999"
            android:gravity="center"

            />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_sale_five"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0折"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            />
    </FrameLayout>
</FrameLayout>
</LinearLayout>